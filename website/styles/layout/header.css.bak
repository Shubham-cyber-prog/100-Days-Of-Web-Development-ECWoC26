/* --- Zenith Layout: Header & Nav ("The Capsule") --- */

.site-header {
    position: fixed;
    /* Floating */
    top: var(--space-4);
    left: 0;
    right: 0;
    z-index: var(--z-sticky);
    pointer-events: none;
    /* Let clicks pass through outside the pill */
    display: flex;
    justify-content: center;
}

.nav-container {
    pointer-events: auto;
    /* Re-enable clicks */
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 64px;
    width: 90%;
    max-width: 1000px;
    /* Constrained pill width */
    padding: 0 var(--space-4);

    background: rgba(10, 10, 10, 0.6);
    /* Semi-transparent void */
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 100px;
    /* Full Capsule Shape */
    box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.5);
    transition: all 0.3s ease;
}

/* Scrolled state (optional: could shrink) */
.site-header.scrolled .nav-container {
    background: rgba(5, 5, 5, 0.9);
}

/* Logo */
.nav-logo {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-family: var(--font-display);
    font-weight: var(--weight-bold);
    font-size: var(--text-lg);
    color: var(--text-primary);
    text-transform: uppercase;
    letter-spacing: 1px;
}

.brand-logo-img {
    height: 36px;
    /* Slightly smaller for the pill */
    width: auto;
}

/* Nav Links (Desktop) */
.nav-links {
    display: flex;
    gap: var(--space-1);
    background: rgba(255, 255, 255, 0.05);
    padding: 4px;
    border-radius: 100px;
    border: 1px solid rgba(255, 255, 255, 0.05);
}

.nav-link {
    font-family: var(--font-body);
    font-weight: var(--weight-medium);
    color: var(--text-secondary);
    font-size: var(--text-sm);
    padding: 0.5rem 1.25rem;
    border-radius: 100px;
    transition: all 0.2s ease;
}

.nav-link:hover {
    color: var(--text-primary);
    background: rgba(255, 255, 255, 0.05);
    /* Subtle hover pill */
}

.nav-link.active {
    color: var(--bg-void);
    background: var(--text-primary);
    /* High contrast active pill */
    font-weight: var(--weight-bold);
    box-shadow: 0 0 15px rgba(255, 255, 255, 0.3);
}

/* User Actions */
.nav-user {
    display: flex;
    align-items: center;
    gap: var(--space-4);
}

.user-avatar {
    width: 40px;
    height: 40px;
    padding: 0;
    border-radius: 50%;
    border: 2px solid var(--glass-border);
    overflow: hidden;
    transition: border-color 0.2s;
}

.user-avatar:hover {
    border-color: var(--accent-core);
}

/* Mobile Toggle */
.mobile-toggle {
    display: none;
    color: var(--text-primary);
    background: none;
    border: none;
    cursor: pointer;
}

/* Mobile Nav Styles */
@media (max-width: 850px) {

    /* Hide desktop nav inside usage */
    .nav-links {
        display: none;
        position: absolute;
        top: 80px;
        left: 50%;
        transform: translateX(-50%);
        width: 90%;
        max-width: 300px;
        flex-direction: column;
        background: var(--bg-nebula);
        border: 1px solid var(--glass-border);
        border-radius: var(--radius-xl);
        padding: var(--space-4);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.8);
        z-index: 1000;
    }

    .nav-links.open {
        display: flex;
        animation: slideDown 0.3s ease;
    }

    .nav-link.active {
        background: var(--accent-core);
        /* Use orange on mobile for clear active state */
        color: white;
    }

    .mobile-toggle {
        display: block;
    }

    .nav-container {
        padding: 0 var(--space-4);
        /* Ensure padding on small screens */
    }
}